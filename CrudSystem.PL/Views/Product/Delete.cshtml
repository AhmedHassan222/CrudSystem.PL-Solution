@model CrudSystem.DAL.Models.Product
@{
    ViewData["Title"] = "Delete";
}

<div class="vh-100 w-100 d-flex justify-content-center align-items-center">
    <div>
        <h4>Are You Sure that you want to Delete this product?</h4>
        <form asp-action="Delete" class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger mx-2 px-2">Yes</button> |
            <a asp-action="Index" class="btn btn-success mx-2 px-2">No</a>
        </form>
    </div>
</div>


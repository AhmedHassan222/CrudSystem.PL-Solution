@model CrudSystem.DAL.Models.Product
@{
    ViewData["Title"] = "Update";
}
<div class="container">
    <h1>Edit Product</h1>
    <form asp-action="Update">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label>Code</label>
            <input class="form-control" asp-for="Code" />
            <span class="text-danger" asp-validation-for="Code"></span>
        </div>
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label>Quantity</label>
            <input class="form-control" asp-for="Quantity" />
            <span class="text-danger" asp-validation-for="Quantity"></span>
        </div>
        <div class="form-group">
            <label>Price</label>
            <input class="form-control" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label>Total</label>
            <input class="form-control" asp-for="Total" />
            <span class="text-danger" asp-validation-for="Total"></span>
        </div>
        <div class="form-group">
            <label>NumberOfBoun</label>
            <input class="form-control" asp-for="NumberOfBoun" />
            <span class="text-danger" asp-validation-for="NumberOfBoun"></span>
        </div>
        <div class="my-3">
            <button type="submit" class="btn btn-primary mx-2 px-2">Save</button> |
            <a asp-action="Index" class="btn btn-success mx-2 px-2">Back</a>
        </div>

    </form>
</div>



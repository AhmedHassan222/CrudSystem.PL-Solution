@{
    ViewData["Title"] = "Index";
}
@using CrudSystem.DAL.Models


<div class="container">
    <div class="d-flex justify-content-between my-5">
        <h3>Products</h3>
        <a asp-action="Create" class="btn btn-primary p-2 ">Add Product</a>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <thead class="text-center">
            <th>Code</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>NumberOfBoun</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {

                <tr class="text-center">
                    <td>
                        @product.Code
                    </td>

                    <td>
                        @product.Name

                    </td>
                    <td>
                        @product.Quantity

                    </td>
                    <td>
                        @product.Price

                    </td>
                    <td>
                        @product.Total

                    </td>
                    <td>
                        @product.NumberOfBoun

                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-id =@product.Id class="btn btn-info text-white">Details</a>
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="Update" asp-route-id=@product.Id class="btn btn-success fs-6">Update</a>

                    </td>

                    <td>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id=@product.Id class="btn btn-danger fs-6">Delete</a>

                    </td>

                </tr>

            }
        </tbody>
    </table>
</div>

